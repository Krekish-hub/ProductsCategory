@model ProductsCategory.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            <div class="form-group">
                <label asp-for="Category.Name" class="form-label">Category</label>
                <datalist id="categoryList">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Name"></option>
                    }
                </datalist>
            </div>
        </dd>
        <dt class="col-sm-2">
            SubCategory
        </dt>
        <dd class="col-sm-10">
            <div class="form-group">
                <label asp-for="SubCategory.Name" class="form-label">SubCategory</label>
                <datalist id="subCategoryList">
                    @foreach (var subCategory in ViewBag.SubCategories)
                    {
                        <option value="@subCategory.Name"></option>
                    }
                </datalist>
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-controller="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" asp-controller="Products">Back to List</a>
</div>
